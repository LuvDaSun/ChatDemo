{
  "name": "chat-web",
  "private": true,
  "description": "chat demo web ui",
  "type": "module",
  "bin": {
    "chat-web": "bin/chat-web"
  },
  "main": "out/main.js",
  "types": "out/main.d.ts",
  "files": [
    "bin/*",
    "out/*",
    "src/*"
  ],
  "scripts": {
    "prepack": "npm install --no-workspaces",
    "pretest": "tsc --build",
    "prepare": "tsc --build",
    "build": "tsc --build",
    "tsc-watch": "tsc --watch",
    "rollup-watch": "rollup --config rollup.config.js --watch --no-watch.clearScreen --waitForBundleInput",
    "clean": "rm -rf ./out && tsc --build --clean",
    "test": "node --test ./out/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/LuvDaSun/ChatDemo.git"
  },
  "author": "LuvDaSun Software B.V.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LuvDaSun/ChatDemo/issues"
  },
  "keywords": [
    "json",
    "schema",
    "generator"
  ],
  "homepage": "https://www.LuvDaSun.software",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@tsconfig/node20": "^20.1.2",
    "rollup": "^4.9.1",
    "typescript": "^5.3.3",
    "typescript-lit-html-plugin": "^0.9.0",
    "yaml": "^2.3.4"
  },
  "dependencies": {
    "@lit/context": "^1.1.0",
    "@types/node": "^20.10.4",
    "@types/yargs": "^17.0.32",
    "goodrouter": "^2.1.2",
    "koa": "^2.14.2",
    "lit": "^3.1.0",
    "tslib": "^2.6.2",
    "type-fest": "^4.6.0",
    "yargs": "^17.7.2"
  }
}
